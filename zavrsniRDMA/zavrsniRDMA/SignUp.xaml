<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zavrsniRDMA.SignUp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="SignUp"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="E-mail" Keyboard="Email" x:Name="EmailInput"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordInput"/>
            <Button Text="SignUp" x:Name="SignUpBtn" Clicked="SignUpBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
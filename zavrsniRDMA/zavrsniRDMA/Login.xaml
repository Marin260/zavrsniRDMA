<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="zavrsniRDMA.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LOGIN" FontSize="Title"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>
            <Frame Margin="10">
                <StackLayout>
                    <Entry Placeholder="E-mail" Keyboard="Email" x:Name="EmailInput"/>
                    <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordInput"/>
                    <Button Text="Login" x:Name="LoginBtn" Clicked="LoginBtn_Clicked"/>
                    <Button Text="SignUp" x:Name="SignUpBtn" Clicked="SignUpBtn_Clicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>